<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrugDeliveryActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="06dp"
                    android:src="@drawable/classes"
                    android:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Drug Delivery"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/fileselector"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/file_uploader"
                    android:drawableLeft="@drawable/file_uploader"
                    android:layout_gravity="center"
                    android:layout_marginTop="30sp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/darkgray"
                    android:hint="Browse - Prescription 1"
                    android:textAlignment="viewStart"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/white" />


                <Button
                    android:id="@+id/fileselector2"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/file_uploader"
                    android:drawableLeft="@drawable/file_uploader"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/darkgray"
                    android:hint="Browse - Prescription 2"
                    android:textAlignment="viewStart"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/white" />



                <!--Name-->
                <EditText
                    android:id="@+id/name"
                    android:inputType="textPersonName"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:background="@color/editTextBG"
                    android:hint="Your Name"
                    android:padding="10dp"
                    android:textSize="20dp" />

                <!--contact-->
                <EditText
                    android:id="@+id/contact"
                    android:inputType="phone"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:background="@color/editTextBG"
                    android:hint="Contact"
                    android:padding="10dp"
                    android:textSize="20dp" />


                <!--email-->
                <EditText
                    android:id="@+id/email"
                    android:inputType="textEmailAddress"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:background="@color/editTextBG"
                    android:hint="Email"
                    android:padding="10dp"
                    android:textSize="20dp" />

                <!--address-->
                <EditText
                    android:id="@+id/address"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:background="@color/editTextBG"
                    android:hint="Address"
                    android:padding="10dp"
                    android:textSize="20dp" />


                <!--note-->

                <EditText
                    android:id="@+id/note"
                    android:inputType="textPersonName"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:background="@color/editTextBG"
                    android:hint="Note"
                    android:padding="10dp"
                    android:textSize="20dp" />


                <CheckBox
                    android:id="@+id/checkBoxDrugDelivery"
                    android:layout_width="300dp"
                    android:layout_marginTop="10sp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Agree with terms and conditions" />




                <!--submit button-->
                <Button
                    android:id="@+id/btnAddPrescription"
                    android:textColor="@color/white"
                    android:background="@color/bluelight"
                    android:text="Send Order"
                    android:layout_gravity="center"
                    android:layout_marginTop="30sp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>
</RelativeLayout>