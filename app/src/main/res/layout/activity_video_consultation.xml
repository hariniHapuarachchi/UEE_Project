<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoConsultationActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="06dp"
                android:src="@drawable/classes"
                android:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Video Consultation"
                android:textColor="@color/white"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:layout_marginTop="30sp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="Hospital"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/hospital_spinner"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:padding="1dp"
                android:background="@drawable/spinner_border"
                android:textSize="15dp"></Spinner>

            <TextView
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:layout_marginTop="10sp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="Doctor Name"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/doctorname_spinner"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:padding="10dp"
                android:background="@drawable/spinner_border"
                android:textSize="15dp"></Spinner>

            <TextView
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:layout_marginTop="10sp"
                android:layout_gravity="center"
                android:text="Specialization"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:textStyle="bold"/>


            <Spinner
                android:id="@+id/specialization_spinner"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:padding="10dp"
                android:background="@drawable/spinner_border"
                android:textSize="15dp"></Spinner>


            <!--submit button-->
            <Button
                android:id="@+id/btnAddClass"
                android:textColor="@color/white"
                android:background="@color/bluelight"
                android:text="PROCEED"
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                android:layout_marginBottom="10dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />




        </LinearLayout>

    </LinearLayout>



</RelativeLayout>